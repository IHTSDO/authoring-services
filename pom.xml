<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.b2international.snowowl</groupId>
		<artifactId>snomed-parent</artifactId>
		<version>4.2.1</version>
	</parent>

	<groupId>org.ihtsdo.snowowl</groupId>
	<artifactId>ihtsdo-snowowl-parent</artifactId>
	<version>4.1.23-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<snowowl.version>4.3.0.ihtsdo</snowowl.version>
		<spring.version>4.1.5.RELEASE</spring.version>
		<spring.security.version>3.2.5.RELEASE</spring.security.version>
		<spring.hateoas.version>0.11.0.RELEASE</spring.hateoas.version>
		<swagger.springmvc.version>0.9.3</swagger.springmvc.version>
		<servlet.api.version>3.0.1</servlet.api.version>
		<xstream.version>1.4.3</xstream.version>
		<jackson.version>2.1.5</jackson.version><!-- This version is what spring-web pulls in -->
	</properties>
	
	<modules>
		<module>org.ihtsdo.snowowl.api.rest.common</module>
		<module>org.ihtsdo.snowowl.api.rest</module>
		<module>org.ihtsdo.snowowl.authoring.single.api.rest</module>
		<module>integration-tests</module>
		<!--<module>org.ihtsdo.snowowl.authoring.template.api.rest</module>-->
	</modules>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>ihtsdo-releases</id>
			<releases><enabled>true</enabled></releases>
			<snapshots><enabled>false</enabled></snapshots>
			<url>https://maven.ihtsdotools.org/content/repositories/releases/</url>
		</repository>
		<repository>
			<id>ihtsdo-snapshots</id>
			<releases><enabled>false</enabled></releases>
			<snapshots><enabled>true</enabled></snapshots>
			<url>https://maven.ihtsdotools.org/content/repositories/snapshots/</url>
		</repository>
	</repositories>

	<distributionManagement>
		<repository>
			<id>ihtsdo-public-nexus</id>
			<name>IHTSDO Public Nexus Releases</name>
			<url>https://maven.ihtsdotools.org/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>ihtsdo-public-nexus</id>
			<name>IHTSDO Public Nexus Snapshots</name>
			<url>https://maven.ihtsdotools.org/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.2</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>external.atlassian.jgitflow</groupId>
				<artifactId>jgitflow-maven-plugin</artifactId>
				<version>1.0-m4.3</version>
				<configuration>
					<autoVersionSubmodules>true</autoVersionSubmodules>
					<enableSshAgent>true</enableSshAgent>
					<allowSnapshots>true</allowSnapshots><!-- This is needed because snowowl is on snapshots -->
					<noDeploy>true</noDeploy>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-project-info-reports-plugin</artifactId>
				<version>2.8</version>
				<reportSets>
					<reportSet>
						<reports>
							<report>dependencies</report>
							<report>license</report>
							<report>scm</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
		</reporting>

</project>
