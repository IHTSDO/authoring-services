<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"

	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.TaskService">
		<constructor-arg>
			<bean class="net.rcarz.jiraclient.JiraClient">
				<constructor-arg value="+{jira.url}"/>
				<constructor-arg>
					<bean class="net.rcarz.jiraclient.BasicCredentials">
						<constructor-arg value="+{jira.username}"/>
						<constructor-arg value="+{jira.password}"/>
					</bean>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="#{systemProperties['osgi.sharedConfiguration.area']}/single_authoring.properties"/>
		<property name="placeholderPrefix" value="+{"/>
	</bean>

</beans>
