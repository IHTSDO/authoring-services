<?xml version="1.0" encoding="UTF-8"?>
<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.dao.CDOConfigurationFactory" name="cdoConfigurationFactory"/>

	<bean name="cdoDbUrl" class="java.lang.String" factory-bean="cdoConfigurationFactory" factory-method="getUrl"/>
	<bean name="cdoDbUsername" class="java.lang.String" factory-bean="cdoConfigurationFactory" factory-method="getUsername"/>
	<bean name="cdoDbPassword" class="java.lang.String" factory-bean="cdoConfigurationFactory" factory-method="getPassword"/>

	<bean name="cdoDataSource" destroy-method="close" class="org.apache.commons.dbcp2.BasicDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" ref="cdoDbUrl" />
		<property name="username" ref="cdoDbUsername" />
		<property name="password" ref="cdoDbPassword" />
	</bean>

</beans>
